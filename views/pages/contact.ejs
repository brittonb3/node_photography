<%- contentFor('main') %>
<section class="container-fluid contact-section">
  <img src="../img/NYC_man_city_crop.jpg" alt="Photo of Downtown Manhatten" class="contact-img" />
  <div class="contact-social">
    <h4 class="text-left touch">WAYS TO GET IN TOUCH</h4>
    <div class="col-xs-12 col-sm-6 text-left social-col-1 social-container">
      <a href="https://www.facebook.com/britt.baumann.7" class="social-con" target="_blank"><i class="fab fa-facebook fa-lg" aria-hidden="true"></i><p class="social-label face-social"> Britt Baumann</p><br/></a>
      <a href="https://www.instagram.com/greatbritton85/" class="social-con" target="_blank"><i class="fab fa-instagram fa-lg" aria-hidden="true"></i><p class="social-label insta-social">@greatbritton85</p><br/></a>
    </div>
    <div class="col-xs-12 col-sm-6 text-left social-col-2 social-container social-bottom">
      <a href="https://twitter.com/GreatBritton85" class="social-con" target="_blank"><i class="fab fa-twitter fa-lg" aria-hidden="true"></i><p class="social-label twitter-social">@greatbritton85</p><br/></a>
      <a href="mailto:Britton@greatbrittonphotography.com" class="social-con" target="_top"><i class="fas fa-envelope-square fa-lg" aria-hidden="true"></i><p class="social-label env-social">Britton@greatbrittonphotography.com</p><br/></a>
    </div>
    <h4 class="text-left touch">CONTACT FORM</h4>
    <div class="col-xs-12 text-center">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <form action="/contact" id="contact-form" method="post" action="send" role="form" class="form-horizontal">
            <fieldset>
            <div class="form-group">
              <label  class="labels" for="name">Name &#42;</label>
              <input id="name" class="form-control label-box" name="name" type="text" placeholder="Your name" required="required">
            </div>
            <div class="form-group">
              <label class="labels" for="email">Email &#42;</label>
              <input id="email" class="form-control label-box" name="email" type="text" placeholder="Your email" required="required">
            </div>
            <div class="form-group ">
              <label class="labels" for="message">Message &#42;</label>
             <textarea class="form-control label-box" id="message" name="message" placeholder="Enter your message here" rows="3" required="required"></textarea>
            </div>
            <button type="submit" class="btn btn-default button">Send Message</button>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
</section>
